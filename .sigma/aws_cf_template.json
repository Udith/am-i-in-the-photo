{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "This template creates the stack for project am-I-in-the-photo. Generated by Sigma",
  "Parameters": {
    "lambdaCodeBucketParameter": {
      "Type": "String",
      "Description": "Name of the S3 bucket containing the Lambda deployment package"
    },
    "lambdaCodeKeyParameter": {
      "Type": "String",
      "Description": "S3 key of the Lambda deployment package"
    }
  },
  "Outputs": {
    "httpApigPhotoUploadAPIRoutePUTuploadMyPhoto": {
      "Description": "URL of PhotoUploadAPI/uploadMyPhoto:PUT endpoint",
      "Value": {
        "Fn::Join": [
          "",
          [
            "https://",
            {
              "Ref": "httpApigPhotoUploadAPI"
            },
            ".execute-api.",
            {
              "Ref": "AWS::Region"
            },
            ".amazonaws.com",
            "",
            "/uploadMyPhoto"
          ]
        ]
      }
    },
    "httpApigPhotoUploadAPIRoutePUTuploadPhoto": {
      "Description": "URL of PhotoUploadAPI/uploadPhoto:PUT endpoint",
      "Value": {
        "Fn::Join": [
          "",
          [
            "https://",
            {
              "Ref": "httpApigPhotoUploadAPI"
            },
            ".execute-api.",
            {
              "Ref": "AWS::Region"
            },
            ".amazonaws.com",
            "",
            "/uploadPhoto"
          ]
        ]
      }
    },
    "photoUploader": {
      "Description": "ARN of Lambda function photo-uploader",
      "Value": {
        "Fn::GetAtt": [
          "photoUploader",
          "Arn"
        ]
      }
    },
    "photoInspector": {
      "Description": "ARN of Lambda function photoInspector",
      "Value": {
        "Fn::GetAtt": [
          "photoInspector",
          "Arn"
        ]
      }
    }
  },
  "Resources": {
    "httpApigPhotoUploadAPI": {
      "Type": "AWS::ApiGatewayV2::Api",
      "Properties": {
        "Description": "An HTTP API generated by Sigma",
        "Name": "PhotoUploadAPI",
        "ProtocolType": "HTTP"
      }
    },
    "httpApigPhotoUploadAPIStage": {
      "Type": "AWS::ApiGatewayV2::Stage",
      "Properties": {
        "ApiId": {
          "Ref": "httpApigPhotoUploadAPI"
        },
        "Description": "Stage of API",
        "StageName": "$default",
        "AutoDeploy": true
      }
    },
    "s3myPicturesUdith": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "my-pictures-udith",
        "NotificationConfiguration": {
          "LambdaConfigurations": [
            {
              "Filter": {
                "S3Key": {
                  "Rules": [
                    {
                      "Name": "prefix",
                      "Value": "photos"
                    }
                  ]
                }
              },
              "Event": "s3:ObjectCreated:*",
              "Function": {
                "Fn::GetAtt": [
                  "photoInspector",
                  "Arn"
                ]
              }
            }
          ]
        }
      }
    },
    "ddbPicturesIamIn": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "PicturesIamIn",
        "AttributeDefinitions": [
          {
            "AttributeName": "imageKey",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "imageKey",
            "KeyType": "HASH"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST"
      }
    },
    "photoUploader": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": "photo-uploader",
        "Description": "Invokes functions defined in photo-uploader.js in project am-I-in-the-photo. Generated by Sigma.",
        "Code": {
          "S3Bucket": {
            "Ref": "lambdaCodeBucketParameter"
          },
          "S3Key": {
            "Ref": "lambdaCodeKeyParameter"
          }
        },
        "MemorySize": 256,
        "Handler": "photo-uploader.handler",
        "Timeout": 181,
        "Runtime": "nodejs10.x",
        "Layers": [],
        "TracingConfig": {
          "Mode": "PassThrough"
        },
        "Role": {
          "Fn::GetAtt": [
            "photoUploaderExecutionRole",
            "Arn"
          ]
        },
        "Environment": {
          "Variables": {
            "SIGMA_AWS_ACC_ID": {
              "Ref": "AWS::AccountId"
            }
          }
        }
      }
    },
    "photoUploaderExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ],
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "photoUploaderPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:PutObject"
                  ],
                  "Resource": "arn:aws:s3:::my-pictures-udith/*"
                }
              ]
            }
          }
        ]
      }
    },
    "httpApigPhotoUploadAPIIntegrationphotoUploader": {
      "Type": "AWS::ApiGatewayV2::Integration",
      "Properties": {
        "ApiId": {
          "Ref": "httpApigPhotoUploadAPI"
        },
        "Description": "Integration of function: photoUploader to HTTP API: PhotoUploadAPI",
        "IntegrationType": "AWS_PROXY",
        "PayloadFormatVersion": "2.0",
        "IntegrationUri": {
          "Fn::GetAtt": [
            "photoUploader",
            "Arn"
          ]
        }
      }
    },
    "httpApigPhotoUploadAPIRoutePUTuploadMyPhoto": {
      "Type": "AWS::ApiGatewayV2::Route",
      "DependsOn": [
        "httpApigPhotoUploadAPIIntegrationphotoUploader"
      ],
      "Properties": {
        "ApiId": {
          "Ref": "httpApigPhotoUploadAPI"
        },
        "RouteKey": "PUT /uploadMyPhoto",
        "AuthorizationType": "NONE",
        "Target": {
          "Fn::Join": [
            "/",
            [
              "integrations",
              {
                "Ref": "httpApigPhotoUploadAPIIntegrationphotoUploader"
              }
            ]
          ]
        }
      }
    },
    "httpApigPhotoUploadAPIRoutePUTuploadMyPhotoPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:InvokeFunction",
        "FunctionName": {
          "Ref": "photoUploader"
        },
        "SourceArn": {
          "Fn::Sub": [
            "arn:aws:execute-api:${AWS::Region}:${AWS::AccountId}:${__ApiId__}/*/${__Method__}${__Path__}",
            {
              "__Method__": "PUT",
              "__Path__": "/uploadMyPhoto",
              "__ApiId__": {
                "Ref": "httpApigPhotoUploadAPI"
              }
            }
          ]
        },
        "Principal": "apigateway.amazonaws.com"
      }
    },
    "httpApigPhotoUploadAPIRoutePUTuploadPhoto": {
      "Type": "AWS::ApiGatewayV2::Route",
      "DependsOn": [
        "httpApigPhotoUploadAPIIntegrationphotoUploader"
      ],
      "Properties": {
        "ApiId": {
          "Ref": "httpApigPhotoUploadAPI"
        },
        "RouteKey": "PUT /uploadPhoto",
        "AuthorizationType": "NONE",
        "Target": {
          "Fn::Join": [
            "/",
            [
              "integrations",
              {
                "Ref": "httpApigPhotoUploadAPIIntegrationphotoUploader"
              }
            ]
          ]
        }
      }
    },
    "httpApigPhotoUploadAPIRoutePUTuploadPhotoPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:InvokeFunction",
        "FunctionName": {
          "Ref": "photoUploader"
        },
        "SourceArn": {
          "Fn::Sub": [
            "arn:aws:execute-api:${AWS::Region}:${AWS::AccountId}:${__ApiId__}/*/${__Method__}${__Path__}",
            {
              "__Method__": "PUT",
              "__Path__": "/uploadPhoto",
              "__ApiId__": {
                "Ref": "httpApigPhotoUploadAPI"
              }
            }
          ]
        },
        "Principal": "apigateway.amazonaws.com"
      }
    },
    "photoInspector": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": "photoInspector",
        "Description": "Invokes functions defined in photo-inspector.js in project am-I-in-the-photo. Generated by Sigma.",
        "Code": {
          "S3Bucket": {
            "Ref": "lambdaCodeBucketParameter"
          },
          "S3Key": {
            "Ref": "lambdaCodeKeyParameter"
          }
        },
        "MemorySize": 256,
        "Handler": "photo-inspector.handler",
        "Timeout": 180,
        "Runtime": "nodejs10.x",
        "Layers": [],
        "TracingConfig": {
          "Mode": "PassThrough"
        },
        "Role": {
          "Fn::GetAtt": [
            "photoInspectorExecutionRole",
            "Arn"
          ]
        },
        "Environment": {
          "Variables": {
            "SIGMA_AWS_ACC_ID": {
              "Ref": "AWS::AccountId"
            }
          }
        }
      }
    },
    "photoInspectorExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ],
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "photoInspectorPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": "s3:ListBucket",
                  "Resource": "arn:aws:s3:::my-pictures-udith"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "rekognition:CompareFaces"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:GetObject"
                  ],
                  "Resource": "arn:aws:s3:::*/*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:GetObject"
                  ],
                  "Resource": "arn:aws:s3:::*/*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:PutItem"
                  ],
                  "Resource": {
                    "Fn::GetAtt": [
                      "ddbPicturesIamIn",
                      "Arn"
                    ]
                  }
                }
              ]
            }
          }
        ]
      }
    },
    "s3myPicturesUdithPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:InvokeFunction",
        "FunctionName": {
          "Ref": "photoInspector"
        },
        "SourceArn": "arn:aws:s3:::my-pictures-udith",
        "Principal": "s3.amazonaws.com"
      }
    }
  }
}